@{
    ViewData["Title"] = "Назва книги";
    ViewData["Name"]  = "Назва книги";
}
<p id="book_id" style="display: none;">@ViewBag.Id</p>
<p id="book_text" style="display: none;">@ViewBag.Text</p>
<div class="readmenu__content">
	<div class="container">
		<div class="readmenu__row">
			<div class="readmenu__text">
			<div id="prev" class="readmenu__text_top"></div>
			<div id="curr" class="readmenu__text_middle"></div>
			<div id="next" class="readmenu__text_bottom"></div>
    
		</div>
		<div class="readmenu__slider">
			<output for="fader" id="speed">0</output>
			<input type="range" id="fader" min="0" max="100" value="0" oninput="outputUpdate(value)">
		</div>
		<div class="readmenu__instruction">швидкість тексту</div>
		</div>
	</div>
</div>
