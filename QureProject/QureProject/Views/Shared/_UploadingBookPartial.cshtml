@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<div id="popup" class="popup">
	<a href="##" class="popup__area"></a>
	<div class="popup__body">
		<div class="popup__content">
			<div class="popup__title">Додати книгу</div>
			<a href="##" class="popup__close">
					<span class="material-symbols-outlined">close</span>
				</a>
			<div class="popup__row">
				<a href="" class="popup__add">
                <form method="post" action="/Home/OnPostAsync">
                    <label for="file-input">
                        <img src="~/img/ADD/add.svg" alt="+" class="popup__add_logo"/>
                    </label>

                    <input type="file" id="file-input"  />
                </form>
				</a>
				<div class="popup__info">
				    <div class="popup__name">Назва книги</div>
				    <div class="popup__autor">Автор книги</div>
				</div>
			</div>

		</div>
	</div>
</div>